{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": false
  },
  "exclude": [
    "./node_modules",
    "./typings/main.d.ts",
    "./typings/main"
  ],
  "filesGlob": [
    "./src/server/server.conf.ts",
    "./src/server/sockets/**/*.ts",
    "./config/**/*.ts",
    "./src/server/**/*.*",
    "./src/client/app/**/*.ts",
    "./src/client/platform/**/*.ts",
    "./src/client/custom-typings.d.ts",
    "./src/typings/index.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
